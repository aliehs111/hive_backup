<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hive Backup</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-between align-center p-2">
        <h1><a href="/">Hive Backup</a></h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{!-- {{#if logged_in}} --}}
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="#" id="logout">Logout</a></li>
            <li><a href="/search">Find Events</a></li>
            <li><a href="/event">Add Event</a></li>
            {{!-- {{else}} --}}
            <li><a href="/signup">Login</a></li>
            {{!-- {{/if}} --}}
          </ul>
        </nav>
      </header>
        {{#if error}}
      <h2 class="error">{{error}}</h2>
    {{/if}}
    <main>
      <!-- Render the sub layout -->
      {{{body}}}
    </main>
      <footer>
      <p>&copy; 2023</p>
      </footer>

   <script src="/js/scripts.js"></script>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>